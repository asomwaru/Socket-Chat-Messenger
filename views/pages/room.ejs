<html>
  <head>
    <title>Room: <%= roomName %></title>
    <%- include('header'); -%>
    <link rel="stylesheet" href="/static/css/room.css" />
  </head>

  <body>
    <%- include('navbar'); -%>

    <ul id="messages">
      <% messages.forEach(function(msg){ %>
      <div class="msg">
        <p><%= msg.username %>:</p>
        <p><%= msg.msg %></p>
      </div>
      <% }); %>
    </ul>

    <div id="input-box">
      <input
        id="message-field"
        type="text"
        placeholder="Send a message here"
        autocomplete="off"
      />
      <button id="submitter">
        <i class="fa fa-angle-right" aria-hidden="true"></i>
      </button>
    </div>
  </body>

  <%- include('script'); -%>
  <script src="/static/js/room.js"></script>
</html>
